<% if @user.errors.any? %>
  <div><%= pluralize(@user.errors.count, "error") %></div>
  <ul>
    <% @user.errors.full_messages.each do |errors|  %>
    <li><%= errors %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %> <br>
<%= f.label :email %>
<%= f.text_field :email %> <br>
<%= f.label :password %><%= f.password_field :password %><br>
<%= f.label :password_confirmation %><%= f.password_field :password_confirmation %><br>
<%= f.submit "Submit" %>
<% end %>
